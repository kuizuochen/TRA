                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="bdOneLine_0" Grid.Column="0" BorderBrush="#FF00A2FF" BorderThickness="3" Margin="2,0,2,0">
