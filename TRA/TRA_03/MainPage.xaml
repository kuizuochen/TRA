                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="bdTwoLine_0" Grid.Column="0" BorderBrush="#FF00A2FF" BorderThickness="3" Margin="2,0,1,0">
